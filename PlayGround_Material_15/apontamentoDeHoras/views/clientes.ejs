<%- include('./partials/head') %>
<%- include('./partials/header') %>
<body>  
    <div class="col-md-12 mt-2">
        <h4 class="text-center">Lista de Clientes</h4>
            <% cliente.forEach(cliente => {%>
                <div class="card card-body mt-1">
                    <label for="id">Id: </label>
                    <input type="number" disabled class="form-control mt-1" name="id" value="<%= cliente.id %>">
                    <label for="cliente">Cliente: </label>
                    <input type="text" disabled class="form-control mt-1" name="cliente" value="<%= cliente.cliente %>">
                    <div class="">
                        <form class="d-inline" action="" method="post">
                            <button type="submit" class="btn btn-success mt-1">Editar</button>
                        </form>
                        <form class="d-inline" action="" method="post">
                            <button type="submit" class="btn btn-danger mt-1">Excluir</button>
                        </form>
                    </div>
                </div>
            <%})%>
    </div>
    <%- include('./partials/footer') %>
</body>

</html>