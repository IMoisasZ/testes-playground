<%- include('./partials/head') %>
<%- include('./partials/header') %>
<body>  
    <div class="col-md-9">
        <h3 class="text-center">Lista de Operação</h3>
            <% operacao.forEach(operacao => {%>
                <div class="card card-body mt-1">
                    <label for="id">Id: </label>
                    <input type="number" disabled class="form-control mt-1" name="id" value="<%= operacao.id %>">
                    <label for="operacao">Operação: </label>
                    <input type="text" disabled class="form-control mt-1" name="operacao" value="<%= operacao.operacao %>">
                    <label for="setor">Setor: </label>
                    <input type="text" disabled class="form-control mt-1" name="setor" value="<%= operacao.setor %>">
                    <div class="d-inline">
                        <form class="d-inline" action="" method="post">
                            <button type="submit" class="btn btn-success mt-1">Editar</button>
                        </form>
                        <form class="d-inline" action="" method="post">
                            <button type="submit" class="btn btn-danger mt-1">Excluir</button>
                        </form>
                    </div>
                
                </div>
            <%})%>
    </div>  
    <%- include('./partials/footer') %>
</body>

</html>