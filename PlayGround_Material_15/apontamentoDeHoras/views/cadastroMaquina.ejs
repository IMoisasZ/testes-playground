<%- include('./partials/head') %>
<%- include('./partials/header') %>
        <section class="col-md-12 mt-2">
            <div class="card">
                <div class="card-body">
                    <h4>Cadastro de Máquinas</h4>
                    <form action="/cadastroMaquina" method="post">
                        <label for="id">ID: </label>
                        <input type="number" name="id" class="form-control text-uppercase" disabled>
                        <label for="maquina">Máquina: </label>
                        <input type="text" name="maquina" class="form-control text-uppercase" required>
                        <label for="tipo">Tipo: </label>
                        <select name="tipo" id="tipo" class="form-select text-uppercase" required>
                            <option value="Tipos...">Tipos...</option>
                            <% tipo.forEach(tipo=> {%>
                                <option value="<%= tipo.tipo %>">
                                    <%= tipo.tipo %>
                                </option>
                                <%})%>
                        </select>
                        <label for="setor">Setor: </label>
                        <select name="setor" id="" class="form-select text-uppercase" required>
                            <option value="Setor...">Setor...</option>
                            <% setor.forEach(setor=> {%>
                                <option value="<%= setor.setor %>">
                                    <%= setor.setor %>
                                </option>
                                <%})%>
                        </select>
                        <button class="btn btn-success mt-1">Cadastrar</button>
                    </form>
                </div>
            </div>    
        </section>
    </main>
    <%- include('./partials/footer') %>
</body>

</html>