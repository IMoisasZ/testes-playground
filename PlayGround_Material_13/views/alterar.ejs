<!DOCTYPE html>
<html>
  <head>
    <title>Carros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body>
    <h1>Lista de Carros</h1>
    <!--Lista de carros-->
    <table class="table table-dark table-sm">
      <tr>
        <td>ID</td>
        <td>Nome</td>
        <td>Marca</td>
        <td>Tipo</td>
      </tr>
      <% listaCarros.forEach(carros => { %>
        <tr>
          <td><%= carros.id %></td>
          <td><%= carros.nome %></td>
          <td><%= carros.marca %></td>
          <td><%= carros.tipo %></td>
        </tr>
      <%})%>
    </table>

    
    <form>
      <!--Id carro-->
      <h1>Alterar carros</h1>
      <label for="">Id carro: </label>
      <select name="id" id="id">
        <option value=" " >      </option>
        <% listaCarros.forEach(carros => {%>
          <option value="<%= carros.id %>" aria-placeholder="Escolha o Id do carro!"><%= carros.id %></option>
        <%})%>
      </select>
      <br>
      <br>
    </form>
      <!--Dados carro pelo id-->
      <form action="" >
        <div class="col-2">
          <label for="">Nome: </label><input class="form-control" type="text" placeholder="Nome carro!" aria-label="default input example" name="carro" value="<%= carro.nome %>">
          <label for="">Marca: </label><input class="form-control" type="text" placeholder="Marca do carro!" aria-label="default input example" name="marca" value="<%= marca.nome %>">
          <label for="">Tipo: </label><input class="form-control" type="text" placeholder="Tipo do carro!" aria-label="default input example" name="tipo" value=<%= carro.nome %>">
        </div>
    </form>
  </body>
</html>