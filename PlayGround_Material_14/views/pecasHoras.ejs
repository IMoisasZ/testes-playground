<!DOCTYPE html>
<html>
  <head>
    <title>Peças por hora Injeção de Plásticos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body class="container border border-light">
  <div class="row">
    <div class="col-md-2"></div>
    <form class="col-md-6">
      <h1 class="h1">Peças por hora</h1>
      <div class="mb-3">
        <label for="codigo" class="form-label mt-">Código: </label>   
        <select name="codigo" onchange="dados(codigo)" >
          <option value="Selecione...">Selecione...</option>
            <% peca.forEach(pc => { %>
              <option value="<%= pc.codigo %> '-' <%= pc.descricao %>" id="codigo"><%= pc.codigo %> - <%= pc.descricao %></option>
            <%})%>
        </select></br>
        <label for="cliente" class="form-label mt-3">Cliente: </label>
        <select name="cliente">
          <option value="">Selecione...</option>
          <% cliente.forEach(cli => { %>
            <option value="<%= cli.nome %>"><%= cli.nome %></option>
          <%})%>
        </select></br>

        <label for="cavidade" class="form-label mt-3">Numero de Cavidades: </label>
          <input type="number" name="cavidade" value="" class="form-control" aria-describedby="emailHelp">

        <label for="ciclo" class="form-label mt-3">Ciclo: </label>
          <input type="number" name="ciclo" value="" class="form-control" aria-describedby="emailHelp">
        
        <label for="pecasHora" class="form-label mt-3">Peças por Hora: </label>
          <input type="number" name="pcsHora" value="" class="form-control" id="pecasHora" aria-describedby="emailHelp" disabled>
        
          <button type="submit" class="btn btn-primary mt-4">Cadastratar</button>
      </div>
    </form>
    <div class="col-md-2"></div>
  </div>
  </body>
</html>
